import java.util.HashMap;
import java.util.Scanner;

public class ControlAcceso {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        HashMap<String, String> usuarios = new HashMap<>();
        usuarios.put("juan", "1234");
        usuarios.put("maria", "clave123");
        usuarios.put("admin", "admin123");

        int intentos = 3;
        boolean acceso = false;
        while (intentos > 0 && !acceso) {
            System.out.print("Usuario: ");
            String usuario = sc.nextLine();
            System.out.print("Contraseña: ");
            String contraseña = sc.nextLine();

            
            if (usuarios.containsKey(usuario) && usuarios.get(usuario).equals(contraseña)) {
                System.out.println("Ha accedido al área restringida.");
                acceso = true;
            } else {
                intentos--;
                if (intentos > 0) {
                    System.out.println("Datos incorrectos. Le quedan " + intentos + " intentos.");
                } else {
                    System.out.println("Lo siento, no tiene acceso al área restringida.");
                }
            }
        }

        sc.close();
    }
}
